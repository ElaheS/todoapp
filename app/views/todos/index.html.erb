<h1>Listing all Todos</h1>


<p>
	<%= link_to "Create a new Todo" , new_todo_path%>
</p>

<table>
	<tr>
		<th>Name</th>
		<th>Description</th>
	</tr>
	<tr>
		<% @todos.each do |todo| %>
			<tr>
				<th> <%= todo.name %> </th>
				<th> <%= todo.description %> </th>
				<th><%= link_to "Edit" , edit_todo_path(todo) %></th>
				<th><%= link_to "Show" , todo_path(todo) %></th>
			</tr>
		<% end %>
	</tr>
</table>


